<div class="card text-center" id="dashboard-card">
  <div class="card-header">
    Hello, {{user.name}}
  </div>
  <div class="card-body">
    <h5 class="card-title">Start your Meal Plan!</h5>
    <p class="card-text">Update your Preferences and start browsing recipes! </p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Set User Preferences
    </button>
    <input class="btn btn-primary" type="submit" value="Browse Recipes!">
  </div>
</div>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">User Preferences</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
        <h2>Diet</h2>
        <select class="form-select" aria-label="Default select example">
        <option selected>Choose a Diet</option>
        <option id="diet" value="Gluten Free">Gluten Free</option>
        <option id="diet" value="Keto">Keto</option>
        <option id="diet" value="Vegetarian">Vegetarian</option>
        <option id="diet" value="Lacto-Vegetarian">Lacto-Vegetarian</option>
        <option id="diet" value="Ovo-Vegetarian">Ovo-Vegetarian</option>
        <option id="diet" value="Vegan">Vegan</option>
        <option id="diet" value="Pescetarian">Pescetarian</option>
        <option id="diet" value="Paleo">Paleo</option>
        <option id="diet" value="Primal">Primal</option>
        <option id="diet" value="Low FODMAP">Low FODMAP</option>
        <option id="diet" value="Whole30">Whole30</option>
        </select>
        <hr>

        <h2>Intolerances</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Dairy">Dairy</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Egg">Egg</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Gluten">Gluten</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Grain">Grain</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Peanut">Peanut</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Seafood">Seafood</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Sesame">Sesame</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Shellfish">Shellfish</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Soy">Soy</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Sulfite">Sulfite</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Tree Nut">Tree Nut</button>
        <button type="button" class="btn btn-primary" data-bs-toggle="button" id="intolerances" value="Wheat">Wheat</button>
        <hr>

        <h2>Cuisines</h2>
        <select class="form-select" aria-label="Default select example">
          <option selected>Choose a Cuisine!</option>
          <option id="cuisine" value="American">American</option>
          <option id="cuisine" value="Chinese">Chinese</option>
          <option id="cuisine" value="French">French</option>
          <option id="cuisine" value="Greek">Greek</option>
          <option id="cuisine" value="Indian">Indian</option>
          <option id="cuisine" value="Italian">Italian</option>
          <option id="cuisine" value="Mexican">Mexican</option>
          <option id="cuisine" value="Middle Eastern">Middle Eastern</option>
          <option id="cuisine" value="Thai">Thai</option>
          <option id="cuisine" value="Vietnamese">Vietnamese</option>
        </select>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick=getChoices() >Update</button>
      </div>
    </div>
  </div>
</div>


<section class="flex-row justify-center">
  {{#each element.id as |recipe|}}
  {{> recipe-details}}
  {{/each}}
</section>

