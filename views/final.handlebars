{{#each recipes as |item|}}
  <div class="card" style="width: 75rem;">
    <div class="card-body">
      <h5 class="card-title">{{item.title}}</h5>
      {{{item.instructions}}}
    </div>
    {{!-- <button
      type="button"
      class="btn btn-primary recipe"
      id={{item.id}}
      onclick="addToList(this.id)"
    >
      Add Recipe
    </button> --}}
  </div>
{{/each}}

<div class="card" style="width: 75rem;">
  <h5>Shopping List</h5>
  {{#each list as |item|}}
    <p style="text-center">{{item.name}} - {{item.amount}} {{item.unit}}</p>
  {{/each}}
</div>

