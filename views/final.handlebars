<nav class="navbar" id="recipe-buttons">
<div class="container-fluid">
  <a href="/dashboard"><input
      class="btn btn-primary"
      type="submit"
      value="Back to User Preferences"
    /></a>

  <a href="/recipes"><input
      class="btn btn-primary"
      type="submit"
      id="postRecipe"
      value="Take Me To Recipe Selection"
    /></a>
</div>
