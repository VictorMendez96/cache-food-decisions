<div class="card text-center">
  <div class="card-header">
    Shopping List
  </div>
  <div class="card-body">
    {{#each item as |list|}}
      <p class="card-text">{{item.name}} - {{item.amount}} {{item.unit}}</p>
    {{/each}}
    <a href="/email" class="btn btn-primary">Create a Shopping List</a>
    <a href="/recipes" class="btn btn-primary">Back to Recipes</a>
    <a href="/dashboard" class="btn btn-primary">Back to User Preferences</a>
    {{! <a href="#" class="btn btn-primary">show me everything</a> }}
  </div>
</div>